	}
	sum[0] = Integer.parseInt(korArr[0]) + Integer.parseInt(engArr[0]) + Integer.parseInt(mathArr[0]);
	sum[1] = Integer.parseInt(korArr[1]) + Integer.parseInt(engArr[1]) + Integer.parseInt(mathArr[1]);
	sum[2] = Integer.parseInt(korArr[2]) + Integer.parseInt(engArr[2]) + Integer.parseInt(mathArr[2]);
	sum[3] = Integer.parseInt(korArr[3]) + Integer.parseInt(engArr[3]) + Integer.parseInt(mathArr[3]);
